set(CMAKE_SYSTEM_NAME Linux)
set(CMAKE_SYSTEM_PROCESSOR riscv)

set(tools /toolchain/riscv64-cartesi-linux-gnu)
set(CMAKE_SYSROOT ${tools}/riscv64-cartesi-linux-gnu/sysroot)
set(CMAKE_C_COMPILER ${tools}/bin/riscv64-cartesi-linux-gnu-gcc)
set(CMAKE_CXX_COMPILER ${tools}/bin/riscv64-cartesi-linux-gnu-g++)

set(ARCH "-march=rv64i")

set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)
